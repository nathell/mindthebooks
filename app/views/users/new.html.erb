<h1>Sign up</h1>

<% if @user.errors.any? %>
<div id="error explanation">
<ul>
<% @user.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :initial_card_number %>
  <%= f.text_field :initial_card_number %>

  <%= f.submit "Sign me up!" %>
<% end %>
